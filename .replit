modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hungry Space Game"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Generate Sounds"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Setup GitHub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Game Test"

[[workflows.workflow]]
name = "Hungry Space Game"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Generate Sounds"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python generate_sounds.py"

[[workflows.workflow]]
name = "Setup GitHub"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python setup_repo.py"

[[workflows.workflow]]
name = "Run Game Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_game.py"

[deployment]
run = ["sh", "-c", "python main.py"]
